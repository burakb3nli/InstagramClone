<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <!--Title bilgisi, yeni gönderi, ekle ve mesaj simgelerinin yer aldığı başlık-->
    <LinearLayout
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:paddingTop="20dp"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="Insta Custom"
            android:textColor="#474747"
            android:textSize="25dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="25dp"
            android:src="@drawable/add"
            android:layout_height="34dp"
            android:layout_marginLeft="158dp"/>
        <ImageView
            android:layout_width="25dp"
            android:src="@drawable/heart"
            android:layout_height="34dp"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:layout_width="25dp"
            android:src="@drawable/message"
            android:layout_height="34dp"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <!--Diğer kullanıcı profilleri gözat-->
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="25dp"
        android:paddingBottom="10dp">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/circle"/>
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/circle"/>
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/circle"/>
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/circle"/>
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/circle"/>

    </LinearLayout>

    <!--Kullanıcı Profil Başlıkları-->
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/textviewstyle"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/circle"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:text="Burak BENLI"
            android:textColor="#474747"
            android:textStyle="bold"/>
        <ImageView
            android:layout_gravity="center"
            android:layout_marginLeft="260dp"
            android:layout_width="20dp"
            android:src="@drawable/dot"
            android:layout_height="20dp"/>

    </LinearLayout>

    <!--Fotoğraf-->
    <LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/roadway"
        android:adjustViewBounds="true"
        />

</LinearLayout>

    <!--Fotoğraf Bilgileri, Beğen, Kaydet vs.-->
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/textviewstyle"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="25dp"
            android:src="@drawable/heart"
            android:layout_height="34dp"/>
        <ImageView
            android:layout_width="25dp"
            android:src="@drawable/comment"
            android:layout_height="34dp"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:layout_width="25dp"
            android:src="@drawable/share"
            android:layout_height="34dp"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:layout_width="35dp"
            android:src="@drawable/favorite"
            android:layout_height="34dp"
            android:layout_marginLeft="260dp"/>


    </LinearLayout>

    <!--Beğenen sayı ve adları-->
    <LinearLayout
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="23.831 görüntülenme"
            android:layout_height="wrap_content"
            android:textColor="#A3A3A3"
            android:textStyle="bold"/>

    </LinearLayout>


</LinearLayout>

